<form name="postform" method="post" enctype="application/x-www-form-urlencoded" action="http://<%= @root %>/" class="form-horizontal">
  <% if @id == '' then %>
  <div class="control-group">
    <label class="control-label" for="short">Keyword:</label>
    <div class="controls">
      <input type="text" name="short" placeholder = "Short keyword (e.g. gog)" class="input-normal" value='<%= @id %>'>
    </div>
  </div>
  <% end %>
  <div class="control-group">
    <label class="control-label">URL / Memo:</label>
    <div class="controls">
      <input type="text" name="long" placeholder="URL or string (e.g. http://Google.com/)" value='<%= @value %>' class="input-xxlarge">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Description:</label>
    <div class="controls">
      <input type="text" name="title" placeholder="Description (e.g. Google search page)" value='<%= @title %>' class="input-xxlarge">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </div>
  <input name="register" type="hidden" value="1">
  <input name="short" type="hidden" value="<%= @id %>">
</form>


